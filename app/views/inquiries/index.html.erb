<h1>Inquiries#index</h1>
<p>Find me in app/views/inquiries/index.html.erb</p>

<%= search_form_for @search, url: inquiry_index_path do |f| %>
  <%= f.label :comment, 'コメント' %>
  <%= f.search_field :comment_cont %>
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :comment) -%></th>
    </tr>
  </thead>
  <tbody>
    <% @inquiries.each do |inquiry| %>
    <tr>
      <td><%= inquiry.comment -%></td>
    </tr>
    <% end %>
  </tbody>
</table>
