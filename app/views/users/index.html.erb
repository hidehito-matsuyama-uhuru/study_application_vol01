<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<%= search_form_for @search, url: users_path do |f| %>
  <%= f.label :name, '名前' %>
  <%= f.search_field :name_cont %>
  <%= f.submit '検索' %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :name) -%></th>
      <th><%= sort_link(@search, :email) -%></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name -%></td>
      <td><%= user.email -%></td>
    </tr>
    <% end %>
  </tbody>
</table>
